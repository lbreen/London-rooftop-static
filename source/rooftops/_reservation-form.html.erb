<form action="/">
  <div class="form-group">
    <h3>Make a reservation</h3>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-6">
        <input type="text" id="reservation-date" class="form-control" placeholder="Monday 8th August">
      </div>
      <div class="col-xs-6">
        <input type="text" id="reservation-time" class="form-control" placeholder="21:00">
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-12">
        <select name="" id="num-of-guests" class="form-control">
          <option value="1">1 Guest</option>
          <option value="2">2 Guests</option>
          <option value="3">3 Guests</option>
          <option value="4">4 Guests</option>
          <option value="5">5 Guests</option>
        </select>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-12">
        <input type="email" id="contact-emai" class="form-control" placeholder="example@mail.com">
      </div>
    </div>
  </div>
  <input type="submit" value="Search" class="btn btn-danger">
</form>
